<h1>Ratings</h1>
<h5>Total number of ratings: <%= @ratings.count %></h5>

<div class="container text-center">
  <div class="row">
    <div class="col-sm">
        <%= render partial: "top", locals: {type: 'Beers', list: @top_beers}%>
    </div>
    <div class="col-sm">
        <%= render partial: "top", locals: {type: 'Breweries', list: @top_breweries}%>  
    </div>
    <div class="col-sm">
        <%= render partial: "top", locals: {type: 'Styles', list: @top_styles}%>  
    </div>
  </div>
</div>

<h2>3 Most active users:</h2>
<ol>
 <% @most_active.each do |ac| %>
    <li> 
        <%= "#{ac.username} #{ac.ratings.count} ratings" %>  
    </li>
 <% end %>
</ol>

<h2>5 latest ratings:</h2>
<ul>
 <% @recent.each do |rating| %>
    <li> 
        <%= render rating %>  
    </li>
 <% end %>
</ul>

<h5><%= link_to "Input a new rating", new_rating_path %></h5>

