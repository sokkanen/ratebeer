<h1>Join a Beer Club</h1>

<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited joining beer club due to:</h2>

      <ul>
      <% @membership.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if @beerclubs.length == 0%>
      <p>No clubs to join.</p>
  <% else %>
    <%= f.select :beer_club_id, options_from_collection_for_select(@beerclubs, :id, :name) %>
    <%= f.submit "Join the club!" %>
  <%end%>

  <div>
    <%= link_to "Back to memberships", memberships_path %>
  </div>

<% end %>






