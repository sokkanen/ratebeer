<% cache brewery do %>
  <div id="<%= dom_id brewery %>">
    <h2>
      <%= brewery.name %>
      <% if not brewery.active  %>
        <span class="badge bg-secondary">retired</span>
      <% end %>
    </h2>
    <p>Established at <i><%= brewery.year%></i></p>
    <div>
      <p>Beers count: <%= brewery.beers.count%></p>
    </div>
    <p>
    <h3>Beers</h3>
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Style</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% brewery.beers.each do |beer| %>
          <tr>
            <td>
              <%= link_to "#{beer.name}", beer %>
            </td>
            <td>
              <%= link_to "#{beer.style.name}", beer.style %>
            </td>
            <% if beer.ratings.empty? %>
              <td>N/A</td>
            <% else %>
              <td><%= round(beer.average_rating) %></td>
            <% end %>
          <tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>