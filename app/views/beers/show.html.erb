<%= render @beer %>

<% if current_user %>
  <h4>Give a rating</h4>

  <%= form_with(model: @rating) do |form| %>
    <%= form.hidden_field :beer_id, value: @beer.id %>
    score: <%= form.number_field :score %>
    <%= form.submit "Create rating" %>
  <% end %>

  <div>
    <%= link_to "Edit this beer", edit_beer_path(@beer), class:'btn btn-secondary' %>
    <%= button_to "Destroy this beer", @beer, method: :delete, class:'btn btn-danger' %>
  </div>
<% end %>

<%= link_to "Back to beers", beers_path %>
