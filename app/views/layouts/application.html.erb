<!DOCTYPE html>
<html>
  <head>
    <title>Ratebeer</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="navibar">
      <%= link_to 'breweries', breweries_path %>
      <%= link_to 'beers',   beers_path %>
      <%= link_to 'ratings',   ratings_path %>
      <%= link_to 'users',   users_path %>
        <% if current_user %> 
          <p><%= link_to "#{current_user.username}", current_user %> signed in</p>
          <%= link_to 'Sign out', session_path, data: { "turbo-method": :delete } %>
          <%= link_to 'Create a new rating', new_rating_path %>
        <% else %>
          <%= link_to 'Sign in', new_session_path %>
          <%= link_to 'Sign up', new_user_path %>
        <% end %>
    </div>
    <%= yield %>
  </body>
</html>
